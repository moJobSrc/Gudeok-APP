<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postlistLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <TextView
            android:id="@+id/bbslistTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/bbslistSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용부분"
            android:textColor="@color/lowestColor"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/bbslistAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자"
                android:textColor="@color/middleColor"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/bbslistDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17시 50분"
                android:textColor="@color/lowestColor"
                android:textSize="12sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/bbslistSeen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회 5"
                android:textColor="@color/lowestColor"
                android:textSize="12sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_round_thumb_up_24"
                    app:tint="@color/lowestColor" />

                <TextView
                    android:id="@+id/bbslistGaechu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="10"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="13dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_chat_24"
                    app:tint="@color/lowestColor" />

                <TextView
                    android:id="@+id/bbslistComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="10"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D2D2D2"/>

</LinearLayout>