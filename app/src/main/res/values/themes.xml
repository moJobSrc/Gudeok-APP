<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GudeokApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/branding</item>-->

        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Theme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
<!--        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/black</item>-->
    </style>
</resources>